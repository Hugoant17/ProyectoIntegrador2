<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imagen_usuario"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_nombre"></ImageView>

        <TextView
            android:id="@+id/titulo_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imagen_usuario"
            android:layout_toRightOf="@id/imagen_usuario"
            android:text="Nombre del usuario"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>


        <TextView
            android:id="@+id/dni_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo_usuario"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imagen_usuario"
            android:layout_toRightOf="@id/imagen_usuario"
            android:text="Dni del Usuario"></TextView>

        <TextView
            android:id="@+id/rol_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dni_usuario"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/imagen_usuario"
            android:layout_toRightOf="@id/imagen_usuario"
            android:text="Rol del Usuario"></TextView>


        <TextView
            android:id="@+id/correo_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rol_usuario"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/imagen_usuario"
            android:layout_toRightOf="@id/imagen_usuario"
            android:text="Correo del Usuario"></TextView>

    </RelativeLayout>


</androidx.cardview.widget.CardView>