<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="275dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/titulo_producto"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="12dp"
            android:layout_marginEnd="29dp"
            android:gravity="center"
            android:text="Nombre del Producto"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/imagen_producto"
            android:layout_width="368dp"
            android:layout_height="114dp"
            android:layout_below="@+id/titulo_producto"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="13dp"
            android:src="@drawable/ic_nombre"></ImageView>

        <TextView
            android:id="@+id/descripcion_producto"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imagen_producto"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="96dp"
            android:layout_marginLeft="-178dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="97dp"
            android:gravity="center"
            android:text="Descripcion del producto"></TextView>

        <TextView
            android:id="@+id/stock_producto"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descripcion_producto"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="86dp"
            android:layout_marginLeft="-178dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="87dp"
            android:gravity="center"
            android:text="Stock"></TextView>

        <TextView
            android:id="@+id/precio_producto"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stock_producto"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="86dp"
            android:layout_marginLeft="-178dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="87dp"
            android:gravity="center"
            android:text="Precio"
            android:textColor="#F44336"
            android:textStyle="bold"></TextView>


    </RelativeLayout>


</androidx.cardview.widget.CardView>