<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imagendelpruducto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_nombre"></ImageView>

        <TextView
            android:id="@+id/titulodelproducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imagendelpruducto"
            android:layout_toRightOf="@id/imagendelpruducto"
            android:text="Nombre del Producto"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>


        <TextView
            android:id="@+id/codigodelproducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulodelproducto"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/imagendelpruducto"
            android:layout_toRightOf="@id/imagendelpruducto"
            android:text="Codigo del Producto"></TextView>

        <TextView
            android:id="@+id/categoriadelProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/codigodelproducto"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/imagendelpruducto"
            android:layout_toRightOf="@id/imagendelpruducto"
            android:text="Categoria del Producto"></TextView>


        <TextView
            android:id="@+id/preciodelproducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/categoriadelProducto"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/imagendelpruducto"
            android:layout_toRightOf="@id/imagendelpruducto"
            android:text="Precio del Usuario"></TextView>

    </RelativeLayout>


</androidx.cardview.widget.CardView>